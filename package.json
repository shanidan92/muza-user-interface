{
  "name": "@muza-music/muza-lit-library",
  "version": "0.0.1",
  "description": "A Lit-based music library components collection",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/muza-lit-library.umd.cjs",
  "module": "./dist/muza-lit-library.js",
  "exports": {
    ".": {
      "import": "./dist/muza-lit-library.js",
      "require": "./dist/muza-lit-library.umd.cjs"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "cleanup": "rimraf dist",
    "lint": "eslint ./src ./tests && prettier --check ./src ./tests",
    "format": "eslint --fix ./src ./tests && prettier --write ./src ./tests"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@open-wc/testing": "^4.0.0",
    "@types/node": "^22.10.10",
    "@vitest/coverage-v8": "^3.0.4",
    "@web/dev-server": "^0.4.1",
    "@web/test-runner": "^0.18.0",
    "@web/test-runner-commands": "^0.9.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-css": "0.11.0",
    "eslint-plugin-html": "^7.0.0",
    "eslint-plugin-lit": "^1.15.0",
    "eslint-plugin-prettier": "^4.0.0",
    "globals": "^15.14.0",
    "happy-dom": "^12.10.3",
    "jsdom": "^26.0.0",
    "prettier": "^2.0.0",
    "rimraf": "^3.0.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.21.0",
    "vite": "^6.0.5",
    "vitest": "^3.0.4"
  },
  "dependencies": {
    "lit": "^3.2.1"
  }
}
